% Définit l'aspect du titre des slides

\setbeamertemplate{frametitle}%
{
    % Place le numéro de slide et le titre à gauche encadrés de rectangles pleins orange
    \begin{textblock*}{\textwidth}(0pt,0pt)
        \scriptsize
        \colorbox{viveris_header_orange!100}{ \strut \insertpagenumber }
        \colorbox{viveris_header_orange!100}{ \strut \insertframetitle }
    \end{textblock*}
    % Place le logo tout à droite du slide
    \hfill \includegraphics[width=1.2cm]{\TemplatePath logo-viveris}
}

